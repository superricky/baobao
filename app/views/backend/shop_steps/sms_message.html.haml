= render layout: 'shop_form' do |f|
  .panel.panel-default
    .panel-heading
      短信设置
    .panel-body
      .field.form-group
        = f.label :max_sms_count, class: "col-sm-3 control-label"
        .col-sm-4
          - if @current_account.is_admin?
            = f.number_field :max_sms_count
            条
          - else
            = f.object.max_sms_count
            条
      .field.form-group
        = f.label :sms_msgs_count, class: "col-sm-3 control-label"
        .col-sm-4
          = f.object.sms_msgs_count
      .field.form-group
        = f.label :use_sms, class: "col-sm-3 control-label"
        .col-sm-4
          = f.check_box :use_sms
          %span.lbl
          (每条短信费用为0.1元)
      .field.form-group
        = f.label :use_sms_validation, class: "col-sm-3 control-label"
        .col-sm-4
          = f.check_box :use_sms_validation, class: "ace ace-switch ace-switch-4"
          %span.lbl
      .field.form-group
        = f.label :max_validation_code_times_in_day, class: "col-sm-3 control-label"
        .col-sm-4
          = f.number_field :max_validation_code_times_in_day
    .panel.panel-footer
      %center
        - if params[:edit]
          = link_to_back
          = f.submit :class=>"btn btn-primary"
        - else
          = link_to '上一步', previous_wizard_path, :class=>"btn btn-primary"
          = f.submit "下一步" ,:class=>"btn btn-primary"
          = link_to '跳过这一步', next_wizard_path, :class=>"btn btn-primary"