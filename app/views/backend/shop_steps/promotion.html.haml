= render layout: 'shop_form' do |f|
  .panel.panel-default
    .panel-heading
      推广设置
    .panel-body
      .field.form-group
        = f.label :least_promotion_number, class: "col-sm-4 control-label"
        .col-sm-8
          = f.number_field :least_promotion_number, class: "form-control", style: "width:100px;display:inline-block;"
          次
    .panel.panel-footer
      %center
        - if params[:edit]
          = link_to_back
          = f.submit :class=>"btn btn-primary"
        - else
          = link_to '上一步', previous_wizard_path, :class=>"btn btn-primary"
          = f.submit "完成" ,:class=>"btn btn-primary"