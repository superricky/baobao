<div class="modal fade article_model" id="promotion_article" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">推广文章</h4>
      </div>
      <div class="modal-body">
        <div class="wx_article">
          <h3 class="title"><%= @article.title%></h3>
          <div class="wx_article_picture">
            <%= image_tag @article.image.medium.url, class: "img-rounded", width: "100%"%>
          </div>
          <div class="wx_article_description">
            <p><%= @article.description%></p>
          </div>
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>