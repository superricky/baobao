<% if @material.errors.size > 0 %>
  $("#material_modal .modal-body").html("<%= escape_javascript(render 'backend/materials/form', {remote: true } )%>")
<% else %>
  $("#material_<%= @material.id%>").replaceWith("<%= escape_javascript(render 'backend/materials/material', {material: @material})%>");
  $('#material_modal').modal('hide')
<% end %>