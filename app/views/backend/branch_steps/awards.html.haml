= render layout: 'branch_form' do |f|
  .panel.panel-default
    .panel-heading
      企业荣誉
    .panel-body
      %table.table.table-striped
        = f.fields_for :awards do |award_form|
          %tr.fields
            %td= award_form.text_field :name
            %td= award_form.text_area :description
            %td= award_form.link_to_remove t("Destroy"), :class=>"btn btn-danger"
      %p= f.link_to_add "新增企业荣誉", :awards, :class=>"btn btn-default"
    .panel.panel-footer
      %center
        - if params[:edit]
          = link_to_back
          = f.submit :class=>"btn btn-primary"
        - else
          = link_to '上一步', previous_wizard_path, :class=>"btn btn-default"
          = f.submit "下一步" ,:class=>"btn btn-primary"
          = link_to '跳过这一步', next_wizard_path, :class=>"btn btn-primary"
