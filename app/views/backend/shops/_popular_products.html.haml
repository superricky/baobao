.col-xs-12
  .widget-box.transparent
    .widget-header
      %h4
        %i.icon-rss.star
        7日内畅销产品榜单
      .widget-toolbar
        %a{:href=>"#", :data=>{:action=>"collapse"}}
          %i.icon-chevron-up
    .widget-body
      .widget-body-inner
        .widget-main.no-padding
          %table.table.table-bordered.table-striped
            %thead.thin-border-bottom
              %tr
                %th
                  %i.icon-caret-right.blue
                  排序
                %th
                  %i.icon-caret-right.blue
                  产品名称
                %th
                  %i.icon-caret-right.blue
                  售出数量
            %tbody
              - @popular_products.each_with_index do |product, index|
                %tr
                  %td= index+1
                  %td
                    %small
                      %s.red
                    %b.green= product[0]
                  %td
                    - if index % 4 == 0
                      %span.label.label-success.arrowed-in.arrowed-in-right= product[1]
                    - elsif index % 4 == 1
                      %span.label.label-info.arrowed-in.arrowed-in-right= product[1]
                    - elsif index%4 == 2
                      %span.label.label-warning.arrowed-in.arrowed-in-right= product[1]
                    - elsif index%4 == 3
                      %span.label.label-danger.arrowed-in.arrowed-in-right= product[1]