%h1 企业新闻列表

%table.table.table-striped
  %tr
    %th 标题
    %th 发表时间
    %th

  - @reports.each do |report|
    %tr
      %td= report.title
      %td= report.created_at.strftime("%Y-%m-%d")
      %td
        = link_to t('Show'), backend_shop_report_path(@current_shop.slug, report), :class=>"btn btn-default"
        = link_to t('Edit'), edit_backend_shop_report_path(@current_shop.slug,report), :class=>"btn btn-default"
        = link_to t('Destroy'), backend_shop_report_path(@current_shop.slug, report), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class=>"btn btn-danger"

%br

= link_to '添加新闻', new_backend_shop_report_path(@current_shop.slug), :class=>"btn btn-primary"
