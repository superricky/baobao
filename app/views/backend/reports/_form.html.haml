= form_for [:backend, @current_shop, @report] do |f|
  - if @report.errors.any?
    #error_explanation
      %h2= "#{pluralize(@report.errors.count, "error")} prohibited this report from being saved:"
      %ul
        - @report.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :content
    = f.cktext_area :content, ckeditor: {:language => "zh-cn"}
  .actions
    = f.submit '保存', :class=>"btn btn-primary"
