<%= form_for([:backend, @current_shop, @current_branch, @tag]) do |f| %>
  <% if @tag.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <div><%= @tag.errors.count %>个错误导致无法成功保存标签分类:</div>

      <ul>
      <% @tag.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-default"%>
  </div>
<% end %>
