.panel.content.col-xs-12.col-md-4{style:"margin:50px auto;padding:0 10px;float:none;"}
  %h2 账户登入
  = simple_form_for(resource, :as => resource_name, :url => webstore_session_path(@current_shop), role: "form") do |f|
    = hidden_field_tag :callback, params[:callback] if params[:callback].present?
    = f.hidden_field :shop_id, value: @current_shop.id
    .form-group
      = f.label :email, class: "control-label"
      = f.email_field :email, :required => false, :autofocus => true, class: "form-control"
    .form-group
      = f.label :password, class: "control-label"
      = f.password_field :password, :required => false, class: "form-control"
      /= f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
    %center.form-actions
      = f.button :submit, "登录", class: "btn btn-default btn-lg"
  = render "webstore/members/shared/links"
